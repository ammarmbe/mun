generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POOLED_DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

enum Council {
  ECOSOC
  ODC
  UNSC
  ICJ
  ASAM
  JDC
}

model User {
  id         String      @id @default(cuid())
  firstName  String
  lastName   String
  council    Council?
  admin      Boolean     @default(false)
  username   String      @unique
  password   String
  interviews Interview[]
  sessions   Session[]
}

model Session {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
}

enum DelegateStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum Faculty {
  ALSUN
  BUSINESS
  PHARMACY
  ENGINEERING
  CS
  ARCHITECTURE
  DENTISTRY
  MASS_COM
}

model Delegate {
  id           String         @id @default(cuid())
  name         String
  faculty      Faculty
  council      Council
  phoneNumber  String
  universityId String?
  status       DelegateStatus
  interview    Interview?     @relation
  interviewId  String?        @unique
}

model Interview {
  id         String   @id @default(cuid())
  delegate   Delegate @relation(fields: [delegateId], references: [id], onDelete: Cascade)
  delegateId String   @unique
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId     String?
  date       DateTime
  grade      String?
  notes      String?
  answers    Answer[]
}

model Question {
  id        String    @id @default(cuid())
  order     Int
  value     String
  council   Council
  answers   Answer[]
  deletedAt DateTime?
}

model Answer {
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  questionId  String
  interview   Interview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  interviewId String
  answer      String

  @@id([questionId, interviewId])
}

enum SettingType {
  STRING
  NUMBER
  BOOLEAN
}

model Setting {
  id          String      @id
  label       String
  description String
  type        SettingType
  min         Int?
  max         Int?
  value       String
}
